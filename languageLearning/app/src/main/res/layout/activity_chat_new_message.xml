<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatNewMessageActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:text="Create a New Message"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sendTo"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Send to: "
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/username" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/sendTo"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </LinearLayout>

    <Button
        android:id="@+id/prevConversationsButton"
        android:layout_width="236dp"
        android:layout_height="80dp"
        android:onClick="onClickWrite"
        android:text="Write a Message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>