<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextEssayDetailActivity">

    <include
        android:id="@+id/detail_header_layout_include"
        layout="@layout/essay_detail_header" />

    <ImageView
        android:id="@+id/essayImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_header_layout_include"
        app:layout_constraintVertical_bias="0.21"
        app:layout_constraintWidth_percent=".8" />

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_header_layout_include"
        app:layout_constraintVertical_bias="0.21"
        app:layout_constraintWidth_percent=".8" />

    <Button
        android:id="@+id/annotateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Annotate"
        app:layout_constraintEnd_toEndOf="@+id/essayImageView"
        app:layout_constraintTop_toBottomOf="@+id/essayImageView" />

    <Button
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Reject"
        app:layout_constraintEnd_toStartOf="@+id/annotateButton"
        app:layout_constraintTop_toBottomOf="@+id/essayImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>